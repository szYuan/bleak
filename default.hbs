<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>{{meta_title}}</title>
	<meta name="description" content="{{meta_description}}" />

	<meta name="HandheldFriendly" content="True" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<link rel="stylesheet" type="text/css" href="{{asset "css/dependencies.css"}}" />
	<link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />

	{{ghost_head}}
</head>

<body class="{{body_class}}">
	<section id="wrapper">
		<div id="ajax-container">
			<nav id="nav" class="nav">
				<div id="nav-blur-cover"></div>
				<div class="nav-content">
					<div class="nav-logo">
						<a href="{{@blog.url}}">
							{{#if @blog.logo}}
							<img src="{{@blog.logo}}" alt="Logo" />
							{{else}}
							<span class="name">{{@blog.title}}</span>
							{{/if}}						
						</a>
					</div>
					<ul class="nav-menu-list">
						{{#foreach @blog.navigation}}
						<li class="nav-menu-item">
							<a class="{{slug}}{{#if current}} current{{/if}}" href="{{this.url}}">{{label}}</a>
						</li>
						{{/foreach}}
					</ul>
					<div class="nav-menu">
						{{#if @blog.navigation}}
						<a class="menu" data-action="menu" data-target="menu"><i class="icon-menu"></i></a>
						{{/if}}
					</div>
				</div>
			</nav>			
			{{{body}}}
			<div id="body-class" style="display: none;" class="{{body_class}}"></div>
			<footer id="footer">
				<section class="credits">
					<span class="credits-theme">
						主题
						<a href="https://github.com/szYuan/bleak" target="_blank" rel="nofollow">Bleak-zh</a>
						由
						<a href="http://www.szy321.com" target="_blank" rel="nofollow">szy</a>
						定制
						forked from zutrinken
						</span>
					<span class="credits-software">使用 <a href="http://ghost.org" target="_blank" rel="nofollow">Ghost</a> 搭建</span>
				</section>
			</footer>
			{{#if @blog.navigation}}
			{{navigation}}
			{{/if}}
		</div>
	</section>
	{{ghost_foot}}
	
	<script type="text/javascript" src="{{asset "js/dependencies.js"}}"></script>
	<script type="text/javascript" src="{{asset "js/script.js"}}"></script>
</body>
</html>